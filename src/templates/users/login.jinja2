{% extends "base.jinja2" %}

{% block content %}
    <div class="form-size">
        <form method="post" action="{{ url_for('users.login_user') }}">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="email" class="form-control" id="email" placeholder="Please type your email...">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Please type your password...">
            </div>
            <button type="submit" class="btn btn-default">Log in</button>
        </form>
    </div>
{% endblock %}